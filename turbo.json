{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", "apps/admin/.env", "apps/web/.env", "packages/db/.env"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"],
      "inputs": ["$TURBO_DEFAULT$", "apps/admin/.env", "apps/web/.env", "packages/db/.env"]
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", "apps/admin/.env", "apps/web/.env", "packages/db/.env"]
    },
    "prisma:generate": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", "packages/db/.env"]
    },
    "prisma:migrate": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", "packages/db/.env"]
    }
  }
}
